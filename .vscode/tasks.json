{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "puppet",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}\\.cpp\\*.cpp",
				"-o",
				"${workspaceFolder}\\puppet.exe",
				"-static"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\msys64\\mingw64\\bin\\g++.exe",
			"dependsOn": ["setup"]
		},
		{
			"type": "cppbuild",
			"label": "setup",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}\\.cpp\\.setup\\setup.cpp",
				"-o",
				"${workspaceFolder}\\setup.exe",
				"-static-libgcc", 
				"-static-libstdc++"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\msys64\\mingw64\\bin\\g++.exe"
		}
	]
}